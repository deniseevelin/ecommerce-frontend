<div class="container-fluid">
  <div class="row">
    <table class="table table-striped table-responsive align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Imagem</th>
          <th scope="col">Nome</th>
          <th scope="col">Quantidade</th>
          <th scope="col">Categoria</th>
          <th scope="col">Valor</th>
          <th scope="col">Editar</th>
        </tr>
      </thead>
      <tbody>
        <% if(products.length > 0){%> <% for (let product of products){%>
        <tr>
          <td scope="row"><%=product._id%></td>
          <td>
            <img
              src="<%=imageHelper.urlImage(product.image)%>"
              class="card-img-top thumb-list size"
            />
          </td>
          <td><%=product.name%></td>
          <td><%=product.quantity%></td>
          <td><%=product.category%></td>
          <td><%=product.price%></td>
          <td>
          <a class="nav-link products" href="/products/<%=product._id%>">
              <button class="btn  btn-light btn-outline-secondary" type="submit">
                <img src="https://img.icons8.com/material-sharp/24/000000/visible.png"/>
              </button>
              <button class="btn  btn-light btn-outline-secondary" type="submit">
                <img src="https://img.icons8.com/ios/24/000000/edit--v1.png"/>
              </button>
              <button class="btn  btn-light btn-outline-secondary" type="submit">
                <img src="https://img.icons8.com/ios/24/000000/trash--v1.png"/>
              </button>
            </a>
          </td>
        </tr>
        <%}%> <%}%>
      </tbody>
    </table>
  </div>
</div>
