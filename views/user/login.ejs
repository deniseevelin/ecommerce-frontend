<div class="container">
  <div class="row">
    <div class="col-5 login">
      <h3>
        <p class="text-black-50 display-6">
          <strong>Login</strong>
        </p>
      </h3>
      <form id="form-login">
        <div class="col mb-3 form-group">
          <label for="login-email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            name="login-email"
            id="login-email"
            aria-describedby="emailHelp"
            placeholder="exemplo@exemplo.com"
          />
        <div class="form-text message-err">Insira um email válido</div>
        </div>
        <div class="col mb-3 form-group">
          <label for="login-password" class="form-label">Senha</label>
          <input
            type="password"
            class="form-control"
            name="login-password"
            id="login-password"
            placeholder="********"
          />
          <div id="passwordlHelp" class="form-text">
            Sua senha deve conter no mínimo 8 caracteres
          </div>
        </div>
        <div class="form-group">
          <button type="button" class="btn btn-dark bg-dark" id="bt-login">Entrar</button>
        </div>
      </form>
    </div>
    <div class="col-2 or">
      <h4>
        <strong>
          <p class="text-black-50">OU</p>
        </strong>
      </h4>
    </div>
    <div class="col-5 register">
      <h3>
        <p class="text-black-50 display-6">
          <strong>Cadastre-se!</strong>
        </p>
      </h3>
      <form id="form-register">
        <div class="col mb-3 form-group">
          <label for="register-name" class="form-label">Nome</label>
          <input
            type="name"
            class="form-control"
            name="register-name"
            id="register-name"
            aria-describedby="nameHelp"
            placeholder="Nome completo"
          />
        </div>
        <div class="col mb-3 form-group">
          <label for="register-email" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            name="register-email"
            id="register-email"
            aria-describedby="emailHelp"
            placeholder="exemplo@exemplo.com"
          />
          <div id="emailHelp" class="form-text"></div>
        </div>
        <div class="col mb-3 form-group">
          <label for="register-password" class="form-label">Senha</label>
          <input
            type="password"
            class="form-control"
            name="register-password"
            id="register-password"
            placeholder="********"
          />
          <div id="passwordlHelp" class="form-text">
            Sua senha deve conter no mínimo 8 caracteres
          </div>
        </div>
        <div class="form-group">
          <button type="button" class="btn btn-dark bg-dark" id="bt-register">Cadastrar</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src = "/js/login.shineyou.js"></script>